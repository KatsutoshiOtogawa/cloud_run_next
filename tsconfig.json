{
  "compilerOptions": {
    "target": "es2022",
    "baseUrl": ".",
    "paths": {
      "#components": [
        "./components/*"
      ],
      "#assets": [
        "./assets/*"
      ],
      "#views": [
        "./views/*"
      ],
      // backend routes
      "#server": [
        "./server/*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "incremental": true,
    "typeRoots": [
       "./types", // this is where you define your types
       "./node_modules/@types" //this where npm packages containing types are located
    ]

   //other config options
  },
  "include": [
    "./*",
    "components",
    "assets",
    "views",
    // backend routes
    "server"
, "types/session.d.ts"  ],
  "exclude": [
    "node_modules"
  ]
}
